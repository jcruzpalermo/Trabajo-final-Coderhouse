<!DOCTYPE html>
<html lang="en">

<head>
    <%- include(`./partials/head`) %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
        integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link rel="stylesheet" href="./template1.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <header>
        <%- include('./partials/header', {current: `formProductos`}) %>
    </header>


    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-12">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <form action="/signup" method="POST" enctype="multipart/form-data">
                                    <h2 class="fw-bold mb-2 text-uppercase">Signup</h2>

                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label" for="typeEmailX">Usuario</label>
                                        <input type="text" id="typeEmailX" name="username"
                                            class="form-control form-control-lg" required minlength="3" />
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label" for="typeEmailX">Password</label>
                                        <input type="password" id="typeEmailX" name="password"
                                            class="form-control form-control-lg" required minlength="3" />
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label" for="typeEmailX">Password</label>
                                        <input type="password" id="typeEmailX" name="password2"
                                            class="form-control form-control-lg" required minlength="3" />
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label" for="typeEmailX">Email</label>
                                        <input type="email" id="typeEmailX" name="email"
                                            class="form-control form-control-lg" required minlength="3" />
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label" for="typeEmailX">Teléfono</label>
                                        <input type="phone" id="typeEmailX" name="tel"
                                            class="form-control form-control-lg" required minlength="12" />
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label" for="typeEmailX">Edad</label>
                                        <input type="number" id="typeEmailX" name="edad"
                                            class="form-control form-control-lg" required minlength="2" />
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label" for="typeEmailX">Dirección</label>
                                        <input type="text" id="typeEmailX" name="direccion"
                                            class="form-control form-control-lg" required minlength="5" />
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label" for="typeEmailX">Foto</label>

                                        <input type="file" id="typeEmailX" name="avatar"
                                            class="form-control form-control-lg" required />
                                    </div>

                                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Registrarse</button>

                                </form>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>

</html>
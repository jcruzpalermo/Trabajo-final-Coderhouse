<!DOCTYPE html>
<html lang="es">

    <head>
        <%- include(`./partials/head`) %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
            integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
        <link rel="stylesheet" href="./template1.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
    </head>

<body>
    <header>
        <%- include('./partials/headerLog', {current: `formProductos`}) %>
    </header>

    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-12">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <h3 class="fw-bold mb-2 text-uppercase">Todas las órdenes:</h3>
                            <br>
                            <br> 
                            <% if (allOrdenes.length <=0 && userLog.admin) { %>
                                <p>No hay ordenes! :(</p>
                                <% } else { %>
                                    
                                    <% allOrdenes.forEach(orden=>{ %>
                                    <table class="table table-dark">
                                        <thead>
                                            <tr>
                                                <th scope="col">ID Orden</th>
                                                <th scope="col">Comprador</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <h5 class="fw-bold mb-2 text-uppercase">Datos del comprador:</h5>
                                                <tr>
                                                    <td>
                                                        <%= orden._id %>
                                                    </td>
                                                    <td>
                                                        <%= orden.owner[1] %>
                                                    </td>
                                                            <table class="table table-dark">
                                                                <br>
                                                                <br>
                                                                <h5 class="fw-bold mb-2 text-uppercase">Detalle de la orden:</h5>
                                                                <thead>
                                                                    <tr>
                                                                        <th scope="col">Código</th>
                                                                        <th scope="col">Cantidad</th>
                                                                        <th scope="col">Nombre</th>
                                                                        <th scope="col">Descripcion</th>
                                                                        <th scope="col">Precio</th>
                                                                        <th scope="col">Imagen</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <% orden.products.forEach(producto=>{ %>
                                                                        <tr>
                                                                            <td>
                                                                                <%= producto.codigo %>
                                                                            </td>
                                                                            <td>
                                                                                <%= producto.cantidad %>
                                                                            </td>
                                                                            <td>
                                                                                <%= producto.nombre %>
                                                                            </td>
                                                                            <td>
                                                                                <%= producto.descripcion %>
                                                                            </td>
                                                                            <td>
                                                                                <%= producto.precio %>
                                                                            </td>
                                                                            <td>
                                                                                <img src="<%= producto.link %>" width="60" height="60">
                                                                            </td>
                                                                        </tr>
                                                                    <% }) %>
                                                                </tbody>
                                                            </table>
                                                <br>
                                                <br>
                                                <br>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
